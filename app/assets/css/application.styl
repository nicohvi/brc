@import 'nib'
@import 'reset'
@import 'header'
@import 'form'
@import 'irc'

// fonts
@import url(http://fonts.googleapis.com/css?family=Inconsolata:400,700)

// global variables
$red = #dd5858
$green = #3d9970

.content
  width: 70%
  display: block
  background: #fff
  margin: 5% auto
  padding: 1% 3%
  box-shadow: 1px 1px 10px #ddd
  box-sizing: border-box

.user-actions
  perspective: 1000
  display: flex
  flex-wrap: wrap
  margin: 50px auto
  width: 350px

  .flipped
    transform: rotateY(-180deg)

    .back
      transform: rotateY(-180deg)

  .flip
    flex: 1
    box-shadow: 1px 1px 10px #ddd
    padding: 0 2em
    align-items: center
    transform-style: preserve-3d
    transition: .8s
    height: 250px
    display: flex

    div
      transition: .4s
      flex: 1

    .unflex
      height: 0
      flex: 0

.front
  flex: 1
  display: flex
  flex-wrap: wrap

  .login-icon, .signup-icon
    padding-left: 1em
    flex: 1
    text-align: center

.notice
  opacity: 0
  padding: .8em
  background: #666
  color: #fff
  font-size: .6em
  position: absolute
  z-index: 1

  &.show
    opacity: 1

  &.right

    &:before
      content: ""
      display: block
      height: 0
      width: 0
      border: 10px solid #666
      border-width: 5px 5px 5px 0
      border-color: rgba(238,238,238,0) #666 rgba(238,238,238,0) rgba(238,238,238,0)
      position: absolute
      left: -4px
      top: 9px

  &.left

    &:after
      content: ""
      display: block
      height: 0
      width: 0
      border: 10px solid #666
      border-width: 5px 5px 5px 0
      border-color: rgba(238,238,238,0) #666 rgba(238,238,238,0) rgba(238,238,238,0)
      position: absolute
      left: 56px
      top: 9px
      transform: rotateY(180deg)

// Media queries
@media(max-width: 800px)
  .content
    width: 100%
    min-width:500px;

  .logo-paragraph
    display: none
