header
  background: linear-gradient(to bottom, #5680AA 0, #47698b 100%)
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1), 0 1px 0 rgba(0, 0, 0, 0.1)
  padding: .3em
  display: flex
  flex-flow: row wrap
  justify-content: flex-end
  align-items: center
  color: #fff
  height: 30px

  a
    color: #fff
    padding: .2em .4em
    opacity: .6
    transition: opacity .3s
    transition: margin .3s

    &:hover
      background: rgba(255,255,255,.3)
      border-radius: 3px
      opacity: 1

  .user
    font-size: .8em
