// global variables
$red = #dd5858

// resets
body, html
  margin:0
  padding:0

#hoverBox
  padding: 1em
  color: #fff
  font-size: .5em
  letter-spacing: .1em
  position: absolute
  display: inline-block


header
  background: linear-gradient(to bottom, #5680AA 0, #47698b 100%)
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1), 0 1px 0 rgba(0, 0, 0, 0.1)
  padding: .3em
  display: flex
  flex-flow: row wrap
  justify-content: flex-end

  a
    color: #fff
    padding: .2em .4em
    opacity: .6
    transition: opacity .3s

    &:hover
      background: rgba(255,255,255,.3)
      border-radius: 3px
      opacity: 1

body
  background-color: whiteSmoke
  font-family: Georgia, serif
  color: #333

h1,h2,h3
  font-family: verdana, sans-serif

h1
  font-size: 3em

h2
  font-size: 2.5em

p
  line-height: 1.5

a
  color: #333

.content
  width: 70%
  display: block
  background: #fff
  margin: 5% auto
  padding: 1% 3%
  box-shadow: 1px 1px 10px #ddd
  box-sizing: border-box

.logo-paragraph
  width: 40px
  vertical-align: middle
  margin-left: 1.5em

// utility styles
.hidden
  opacity: 0
  box-sizing: border-box
  margin: 0
  padding: 0

// Typography-styling
.user
  color: $red

.irc-nick
  background: $red
  box-sizing: border-box
  display: inline-block
  color: #fff
  padding: .2em .4em
  border-radius: 20px

// Media queries
@media(max-width: 800px)
  .content
    width: 100%
    min-width:500px;

  .logo-paragraph
    display: none
