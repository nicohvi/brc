body
  background-color: whiteSmoke
  font-family: Georgia, serif
  color: #333

h1,h2,h3
  font-family: verdana, sans-serif

h1
  font-size: 3em

h2
  font-size: 2.5em

.content
  width: 70%
  display: block
  background: #fff
  margin: 5% auto
  padding: 1% 3%
  box-shadow: 1px 1px 10px #ddd
  box-sizing: border-box

.logo-paragraph
  width: 40px
  vertical-align: middle
  margin-left: 1.5em

.alert
  transition: opacity .5s
  cursor: pointer

// utility styles
.hidden
  opacity: 0
  box-sizing: border-box
  margin: 0
  padding: 0

// Typography-styling
.user
  color: red

// Media queries
@media(max-width: 800px)
  .content
    width: 100%
    min-width:500px;

  .logo-paragraph
    display: none
