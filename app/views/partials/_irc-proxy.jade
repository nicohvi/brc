section#irc-proxy
  h3 IRC proxy

  form(action="/irc-config" method="post" id="irc-config")

    div.message.alert.hidden

    section.form-row
      section.form-element
        aside Nick
        input.double-button(type="text" name="nick" value="#{proxy.nick}" disabled)
        aside.lock
          i.fa.fa-lock

    if proxy.servers[0]
      section.form-row
        section.form-element
          aside Server
          input.double-button(type="text" name="server" value="#{proxy.servers[0].url}" disabled)
          aside.lock
            i.fa.fa-lock

    else
      section.form-row
        section.form-element
          aside Server
          input.double-button(type="text" name="server" value="" disabled)
          aside.lock
            i.fa.fa-lock

  button(href="/connect" id="connect", data-proxy-id="#{proxy._id}") Connect
